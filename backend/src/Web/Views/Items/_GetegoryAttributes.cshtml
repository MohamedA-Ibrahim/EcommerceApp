@model IList<AttributeType>
@for (int i = 0; i < Model.Count(); i++)
{
    var att = Model[i];
    <div class="mb-3 col-6">
        <input type="hidden" name="Item.AttributeValues[@i].AttributeTypeId" value="@att.Id" />
        <label for="Item.AttributeValues[@i].Value">@att.Name</label>
        <input id="Item.AttributeValues[@i].Value" name="Item.AttributeValues[@i].Value" class="form-control attributevalue@(i)" required />
    </div>
}