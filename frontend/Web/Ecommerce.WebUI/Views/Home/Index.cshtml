@model IEnumerable<Ecommerce.WebUI.Models.Item>


<div class="row pb-3">
    @foreach(var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border:1px solid #008cba; border-radius:5px;">
                    <div class="card">
                        <img class="img-responsive full-width" src="data:image/jpeg;base64,@Convert.ToBase64String(item.Image)" />
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@item.Name</p>
                            <p class="card-title text-info">@item.Category.Name</p>
                        </div>
                          <div class="pl-1">
                            <p>Price: <b>@item.Price.ToString("0.00")</b></p>
                        </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@item.Id">
                            Details
                        </a>
                    </div>
                </div>
            </div>

        </div>
    }
</div>


<fb:login-button 
  scope="public_profile,email"
  onlogin="checkLoginState();">
</fb:login-button>
<div id="authstatus"></div>

@section Scripts{

<script>
  window.fbAsyncInit = function() {
    FB.init({
      appId      : '296678209304633',
      cookie     : true,
      xfbml      : true,
      version    : 'v5.0'
    });
      
    FB.AppEvents.logPageView();   
      
  };

  (function(d, s, id){
     var js, fjs = d.getElementsByTagName(s)[0];
     if (d.getElementById(id)) {return;}
     js = d.createElement(s); js.id = id;
     js.src = "https://connect.facebook.net/en_US/sdk.js";
     fjs.parentNode.insertBefore(js, fjs);
   }(document, 'script', 'facebook-jssdk'));

   function checkLoginState(){
       
FB.getLoginStatus(function(response) {
    $("#authstatus").html("<code>"+JSON.stringify(response,null,2)+"</code>")
});
   }
</script>
}
