@page
@model Web.Areas.Identity.Pages.Account.Manage.AddressesModel
@{
    ViewData["Title"] = "Addresses";
    ViewData["ActivePage"] = ManageNavPages.Addresses;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Address.RecieverName" class="form-control" />
                <label asp-for="Address.RecieverName" class="form-label"></label>
                <span asp-validation-for="Address.RecieverName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Address.PhoneNumber" class="form-control" />
                <label asp-for="Address.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Address.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Address.City" class="form-control" />
                <label asp-for="Address.City" class="form-label"></label>
                <span asp-validation-for="Address.City" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Address.StreetAddress" class="form-control" />
                <label asp-for="Address.StreetAddress" class="form-label"></label>
                <span asp-validation-for="Address.StreetAddress" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Create</button>
        </form>
    </div>
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        <label asp-for="Address.RecieverName"></label>
                    </th>
                    <th>
                        <label asp-for="Address.PhoneNumber"></label>
                    </th>
                    <th>
                        <label asp-for="Address.City"></label>
                    </th>
                    <th>
                        <label asp-for="Address.StreetAddress"></label>
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model.Addresses)
                {
                    <tr>
                        <td>@obj.RecieverName</td>
                        <td>@obj.PhoneNumber</td>
                        <td>@obj.City</td>
                        <td>@obj.StreetAddress</td>
                        <td></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

